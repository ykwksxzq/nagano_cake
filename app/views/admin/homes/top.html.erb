<h2>注文履歴一覧</h2>


<% @orders.each do |order| %>
<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </thead>

  <tbody>
    <tr>
      <td>
        <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %>
        </td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.order_details.sum(:order_amount) %></td>
    </tr>
  </tbody>

 <% end %>
</table>

<%= paginate @orders %>