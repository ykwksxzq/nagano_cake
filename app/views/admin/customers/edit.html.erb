
<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>


<%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
  会員ID <%= @customer.id %></br>
  <label for="inputName">氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </br>
  <label for="inputName">フリガナ</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"名前"%>
  </br>
  <label for="inputCode">郵便番号</label>
  <%= f.text_field :postal_code, autofocus: true, id:"inputCode", placeholder:"郵便番号"%>
  </br>
  <label for="inputAddress">住所</label>
  <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所"%>
  </br>
  <label for="inputNumber">電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputAddress", placeholder:"電話番号"%>
  </br>
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%>
  </br>
  会員ステータス　<%= @customer.is_deleted %>


　<%= f.submit "編集内容変更を保存" %>
<% end %>
