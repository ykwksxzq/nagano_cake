
<div class="container">
 <div class="row">
  <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto align-text-center rounded px-0 my-5">

    <h4>商品新規登録</h4>

    <div classz="form-body">
　　<%= form_with model: @item, url:admin_items_path, method: :post do |f| %>

    <div class="input-group">
      <div class="form-group">
       <label for="inputFile" class="form-label">商品画像　</label>
         <%= f.file_field :image, accept: "image/*", class: "w-100"%>
       </div>
       </div>

       <div class="mb-3 mt-4">

       <div class="input-group">
       <label for="inputText">商品名 </label></br>
       <%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
       </div>
       </div>

       <div class="mb-3 mt-4">
       <div class="input-group ">
       <label for="inputText">商品説明</label>
       <%= f.text_area :introduction, class:"form-control",rows:"3", placeholder:"ここに説明文を記載します" %>
       </div>
       </div>

       <div class="mb-3 mt-4">
     　 <div class="input-group">
       <label for="inputText">税抜価格</label>
       <%= f.text_field :price, class:"form-control", placeholder:"1000" %> 円
       </div>
       </div>

        <%= f.submit '新規登録', class:"btn btn-lg btn-success mt-4" %>
       <% end %>

    </div>
  </div>
 </div>
</div>
