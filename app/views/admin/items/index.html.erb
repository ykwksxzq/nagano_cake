<div class="container">
<div class="row">


<h4>商品一覧</h4>

<div class="position-relative">
<div class="position-absolute top-0 start-0">

<%= link_to "+", new_admin_item_path %>


</div>
</div>

<table class="table table-hover table-inverse">
<thead class="table-borderless">
    <tr>
    <th scope="col">商品ID</th>
    <th scope="col">商品名</th>
    <th scope="col">税抜価格</th>
    </tr>
  </thead>
  <tbody>
     <% @items.each do |item| %>
    <tr>
     <td><%= item.id %></td>
     <td><%= link_to item.name, admin_item_path(item.id), class:'text-dark' %></td>
     <td><%= item.price %></td>

     <% end %>
    </tr>
  </tbody>
</table>

<%= paginate @items %>
</div>
</div>
