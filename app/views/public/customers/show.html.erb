<div class="container">

<h4>マイページ</h4>
</br>
<div class="row mx-auto">
  <h5><span style="margin-right:20px;"><strong>登録情報</strong></span></h5>
  <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
</div>

</br>

<div class="row mx-auto">
<div class="col-4 col-sm-6">
<table class="table table-bordered">
  <tr>
    <th scope="row">氏名</th>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr>
    <th scope="row">カナ</th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th scope="row">郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th scope="row">住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th scope="row">電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th scope="row">メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

</div>
</div>

</br>

<div class="row mx-auto">
  <h5><span style="margin-right:20px;"><strong>注文履歴</strong></span></h5>
  <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
</div>

</div>