<div class="container">
<div class="row">
<div class="col-md-10 col-sm-10 mx-2 mx-sm-auto align-text-center rounded px-0 my-5">

<h4>会員情報編集</h4>

<%= form_with model: @customer, url:customers_information_path, method: :patch do |f| %>

  <div class="form-group row">
  <label for="inputName" class="col-sm-2 col-form-label">氏名</label>
  <div class="col-sm-5">
  <%= f.text_field :last_name, class: "form-control", autofocus: true, placeholder:"姓"%>
  </div>
  <div class="col-sm-5">
  <%= f.text_field :first_name, class: "form-control", placeholder:"名"%>
  </div>
  </div>

  <div class="form-group row">
  <label for="inputName" class="col-sm-2 col-form-label">フリガナ</label>
  <div class="col-sm-5">
  <%= f.text_field :last_name_kana, class: "form-control", placeholder:"セイ"%>
  </div>
  <div class="col-sm-5">
  <%= f.text_field :first_name_kana, class: "form-control", placeholder:"メイ"%>
  </div>
  </div>

  <div class="form-group row">
  <label for="inputCode" class="col-sm-2 col-form-label">郵便番号</label>
  <div class="col-sm-5">
  <%= f.text_field :postal_code, class: "form-control", placeholder:"郵便番号"%>
  </div>
  </div>

  <div class="form-group row">
  <label for="inputAddress" class="col-sm-2 col-form-label">住所</label>
  <div class="col-sm-10">
  <%= f.text_field :address, class: "form-control", placeholder:"住所"%>
  </div>
  </div>

  <div class="form-group row">
  <label for="inputNumber" class="col-sm-2 col-form-label">電話番号</label>
  <div class="col-sm-5">
  <%= f.text_field :telephone_number,class: "form-control", placeholder:"電話番号"%>
  </div>
  </div>

  <div class="form-group row">
  <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
  <div class="col-sm-5">
  <%= f.text_field :email,class: "form-control", placeholder:"メールアドレス"%>
  </div>
  </div>

  <div class="form-group row">
  <div class="col-sm-5">
　 <%= f.submit "編集内容変更を保存", class: "btn btn-success" %>
  <% end %>
  </div>
  <div class="col-sm-5">
  <%= link_to "退会する", customers_check_path, class: "btn btn-danger" %>
  </div>

  </div>

