<P>注文情報画面</P>


<table>
<thead>
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
</thead>

<tbody>

<% @cart_items.each do |cart_item| %>

<tr>

<td><%= image_tag cart_item.item.get_image(10, 10) %><%= cart_item.item.name %></td>
<td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
<td><%= cart_item.amount %></td>
<td><%= cart_item.subtotal.to_s(:delimited) %></td>
</tr>

<% @total = @total + cart_item.subtotal %>

<% end %>
</tbody>
</table>

<table>

<th>送料</th>
<th>商品合計</th>
<th>請求金額</th>

<tr>

<td><%= @order.shipping_cost %></td>
<td><%= @total.to_s(:delimited) %></td>
<td><% @order.total_payment = @order.shipping_cost + @total.to_i %>
    <%= @order.total_payment.to_s(:delimited) %>
</td>
</tr>

</table>


<h4>支払方法</h4>
<%= @order.payment_method_i18n %>

<h4>お届け先</h4>

<%= @order.shipping_postal_code %>
<%= @order.shipping_address %>
<%= @order.shipping_name %>


<%= form_with model: @order, url:orders_path, method: :post do |f| %>

<%= f.hidden_field :customer_id %>
<%= f.hidden_field :shipping_postal_code %>
<%= f.hidden_field :shipping_address %>
<%= f.hidden_field :shipping_name %>
<%= f.hidden_field :shipping_cost %>
<%= f.hidden_field :total_payment %>
<%= f.hidden_field :payment_method %>
<%= f.submit '注文を確定する' %>

<% end %>
