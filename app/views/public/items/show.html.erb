
<div class="container">

<div class="row justify-content-center">
  <div class="col-md-6">
    <div style="padding-left:20%;">
      <%= image_tag url_for(@item.image), class: 'img-fluid', style: 'width: 65%;' %>
    </div>
   </div>

    <div class="col-md-6">
    <h2 class="my-4">
     <span style="margin-left:10px;">
      <strong><%= @item.name %></strong></span></h2>

    <h4 class="my-4">
    <span style=margin-left:10px;><%= @item.introduction %></span></h4>

    </br>

     <h3 class="my-4">
     <span style="margin-left:10px;">
       <strong> ¥<%= @item.with_tax_price %></strong></span>(税込)</h3>

    <%= form_with model: @cart_item, url:cart_items_path, method: :post do |f| %>
    <% if customer_signed_in? %>

    <%= f.hidden_field :item_id, :value => @item.id %>

    <% end %>

    <div class="my-4">
     <span style="margin-left:10px;">
      <%= f.select :amount, *[1..10], { include_blank: '個数選択' }%>
      <%= f.submit "カートに入れる", class: 'btn btn-success' %></span>
    </div>

  <% end %>

  </div>
  </div>
